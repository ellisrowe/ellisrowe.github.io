                        <div class="spec-value">POST https://api.mockulator.com/api/e9I60qKl/training/veteransMortgage</div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-label">Content Type</div>
                        <div class="spec-value">application/x-www-form-urlencoded</div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-label">Response Format</div>
                        <div class="spec-value">application/json</div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-label">Authentication</div>
                        <div class="spec-value">Bearer Token Required</div>
                    </div>
